<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="3" author="LittleBlBb">
        <createSequence sequenceName="catalog_seq" schemaName="app" startValue="1"/>
        <createSequence sequenceName="product_seq" schemaName="app" startValue="1"/>
        <createSequence sequenceName="user_seq" schemaName="app" startValue="1"/>
        <createSequence sequenceName="audit_seq" schemaName="app" startValue="1"/>
    </changeSet>

    <changeSet id="4" author="LittleBlBb">
        <createTable tableName="catalog" schemaName="app">
            <column name="id" type="BIGINT" defaultValueSequenceNext="catalog_seq">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="LittleBlBb">
        <createTable tableName="product" schemaName="app">
            <column name="id" type="BIGINT" defaultValueSequenceNext="product_seq">
                <constraints primaryKey="true"/>
            </column>
            <column name="catalog_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="price" type="NUMERIC(12,2)"/>
            <column name="brand" type="VARCHAR(255)"/>
            <column name="category" type="VARCHAR(255)"/>
            <column name="description" type="TEXT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableSchemaName="app"
                baseTableName="product"
                baseColumnNames="catalog_id"
                constraintName="fk_product_catalog"
                referencedTableSchemaName="app"
                referencedTableName="catalog"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="6" author="LittleBlBb">
        <createTable tableName="user" schemaName="app">
            <column name="id" type="BIGINT" defaultValueSequenceNext="user_seq">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="7" author="LittleBlBb">
        <createTable tableName="audit_log" schemaName="app">
            <column name="id" type="BIGINT" defaultValueSequenceNext="audit_seq">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="action" type="VARCHAR(255)"/>
            <column name="details" type="TEXT"/>
            <column name="timestamp" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
